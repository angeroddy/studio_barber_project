# Configuration de la base de données
DATABASE_URL="postgresql://user:password@host:5432/database?sslmode=require"

# Secrets JWT (Générer des clés aléatoires longues pour la production)
JWT_SECRET="votre_secret_jwt_super_long_et_securise"
JWT_EXPIRES_IN="7d"
REFRESH_TOKEN_SECRET="votre_secret_refresh_token_different"

# Configuration de l'environnement
NODE_ENV="development"
PORT=5000

# Logging
# Niveaux disponibles: error, warn, info, http, verbose, debug, silly
LOG_LEVEL="info"

# Sentry - Error tracking et monitoring (optionnel)
# Créer un compte sur https://sentry.io et obtenir votre DSN
SENTRY_DSN="https://your-sentry-dsn@sentry.io/your-project-id"
SENTRY_TRACES_SAMPLE_RATE="0.1"
SENTRY_PROFILES_SAMPLE_RATE="0.1"
# SENTRY_RELEASE="v1.0.0" # Optionnel - pour tracker les versions

# CORS - URLs autorisées (séparées par des virgules, sans espaces)
# Exemple production: ALLOWED_ORIGINS="https://app.fresha.com,https://client.fresha.com"
ALLOWED_ORIGINS="http://localhost:5173,http://localhost:3000"

# Pour générer des secrets sécurisés, utiliser:
# node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"

# Verification email client (Resend)
RESEND_API_KEY="re_YOUR_RESEND_API_KEY_HERE"
RESEND_FROM_EMAIL="Studio Barber <no-reply@contact.studiobarber.eu>"
BACKEND_PUBLIC_URL="http://localhost:5000"
CLIENT_APP_URL="http://localhost:3000"
STAFF_APP_URL="http://localhost:5173"
CLIENT_SLOT_HOLD_MINUTES=10
CLIENT_EMAIL_VERIFICATION_TTL_MINUTES=1440
CLIENT_BOOKING_RECAP_DELAY_MINUTES=2
CLIENT_BOOKING_RECAP_POLL_INTERVAL_MS=30000
CLIENT_BOOKING_REMINDER_LEAD_HOURS=24
STAFF_INVITATION_TTL_HOURS=72

# Auth cookie (HttpOnly)
# In production cross-origin (frontend != backend): use SameSite=None + Secure=true
AUTH_COOKIE_NAME="auth_token"
AUTH_COOKIE_SAME_SITE="none"
AUTH_COOKIE_SECURE="true"
AUTH_COOKIE_MAX_AGE_MS="604800000"
